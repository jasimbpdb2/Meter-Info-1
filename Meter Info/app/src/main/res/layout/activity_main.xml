<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f8f9fa">

    <!-- Meter Input -->
    <EditText
        android:id="@+id/meterInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter meter number"
        android:inputType="number"
        android:maxLines="1"
        android:layout_marginBottom="16dp"
        android:minHeight="48dp"
        android:padding="12dp"
        android:background="#ffffff"
        android:textSize="16sp" />

    <!-- RadioButton Group: Prepaid/Postpaid -->
    <RadioGroup
        android:id="@+id/mainRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/prepaidBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/radio_background"
            android:button="@null"
            android:gravity="center"
            android:padding="12dp"
            android:text="ðŸ”‹ Prepaid"
            android:textColor="#212121"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />

        <RadioButton
            android:id="@+id/postpaidBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/radio_background_inactive"
            android:button="@null"
            android:gravity="center"
            android:padding="12dp"
            android:text="ðŸ’¡ Postpaid"
            android:textColor="#ffffff"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />
    </RadioGroup>

    <!-- Postpaid Sub-options (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/postpaidOptionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        android:background="#e3f2fd"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Input Type:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/postpaidRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/consumerNoOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/sub_radio_background"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="ðŸ‘¤ Consumer No"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:checked="true" />

            <RadioButton
                android:id="@+id/meterNoOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/sub_radio_background_inactive"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="ðŸ”¢ Meter No"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </RadioGroup>
    </LinearLayout>

    <!-- Submit Button Section - MODIFIED -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="#27ae60"
            android:padding="14dp"
            android:text="ðŸš€ Submit"
            android:textColor="#263238"
            android:textSize="16sp" />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“‹ Consumer Info:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- ScrollView for Results -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:contentDescription="Customer information and bill history data"
        android:padding="12dp"
        android:scrollbars="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/resultView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:cursorVisible="false"
                    android:focusableInTouchMode="true"
                    android:inputType="none"
                    android:longClickable="true"
                    android:padding="8dp"
                    android:scrollbars="vertical"
                    android:selectAllOnFocus="false"
                    android:text="ðŸ‘† Select bill type, enter meter/Consumer Number and tap Submit"
                    android:textColor="#2c3e50"
                    android:textColorHighlight="#80D1E0F7"
                    android:textIsSelectable="true"
                    android:textSize="14sp" />

                <!-- Container for dynamic table content -->
                <LinearLayout
                    android:id="@+id/tableContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
                <!-- ADD THIS NEW EXCEL BUTTON -->

            </LinearLayout>

        </HorizontalScrollView>

    </ScrollView>

</LinearLayout>