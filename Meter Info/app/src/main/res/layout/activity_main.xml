<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Your existing input fields and buttons -->
    <EditText
        android:id="@+id/meterInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter meter number" />
    
    <RadioGroup
        android:id="@+id/mainRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <RadioButton
            android:id="@+id/prepaidBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Prepaid" />
            
        <RadioButton
            android:id="@+id/postpaidBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Postpaid" />
    </RadioGroup>

    <!-- Postpaid options (existing) -->
    <LinearLayout
        android:id="@+id/postpaidOptionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">
        
        <RadioGroup
            android:id="@+id/postpaidRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <RadioButton
                android:id="@+id/consumerNoOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Consumer No" />
                
            <RadioButton
                android:id="@+id/meterNoOption"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meter No" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search" />
    <Button
  				  android:id="@+id/htmlViewBtn"
    				android:layout_width="match_parent"
    				android:layout_height="wrap_content"
    				android:text="ðŸ“Š View in HTML"
    				android:background="#4CAF50"
   				 android:textColor="#ffffff" />

    <!-- HTML DISPLAY AREA - ADD THIS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#f5f5f5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š HTML View"
            android:textStyle="bold"
            android:padding="8dp"
            android:background="#2c3e50"
            android:textColor="#ffffff" />

        <WebView
            android:id="@+id/htmlWebView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Keep your existing table container below HTML -->
    <LinearLayout
        android:id="@+id/tableContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <!-- Your existing back button -->
    <Button
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back" />

</LinearLayout>